<div x-show="currrentSubmenu=='dropdown-menu-2'"
  x-on:mouseover="currrentSubmenu='dropdown-menu-2'"
  style="display: none;"
  x-transition>
  <div id="dropdown-menu-2" class="submenu__item">
    {% for service in services %}
      <div class="col-12 col-lg-3 col-md-4 col-sm-6 col-xl-3 col-xxl-3 dropdown-box isgne">
        <a href="sluzby/{{ service.title }}">{{ service.title }}</a>
        {% if service.excerpt %}
          <p>
            {{ service.excerpt }}
          </p>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>
