{% for post in posts %}
  <a href="/blog/{{ post.slug }}">
    <div class="blog-box">
      <h3>
        {{ post.title }}
      </h3>
      <span class="date-main">{{ post.created_at|date('d.m. Y') }}</span>
      <button class="btn">{% include 'components/ArrowRight.twig' %}</button>
    </div>
  </a>
{% endfor %}
