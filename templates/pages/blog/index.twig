{% block content %}
  <div class="blog">
    <div class="blog-content">
      {% for post in data.posts %}
        <a href="/blog/{{ post.id }}">
          <div class="blog-box">
            <h3>
              {{ post.title }}
            </h3>
            <span class="date-main">{{ post.created_at|date('d.m. Y') }}</span>
            <button class="btn">
              <img src="assets/images/icons/right-arrow-white.png" />
            </button>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
{% endblock %}
